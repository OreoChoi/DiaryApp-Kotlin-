<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_tab"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:tabIndicatorColor="@android:color/transparent"
    app:tabMode="scrollable"
    app:tabTextAppearance="@style/TitleTab">

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tb_diary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/tab_diary" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tb_write"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="@string/tab_write" />
</com.google.android.material.tabs.TabLayout>
